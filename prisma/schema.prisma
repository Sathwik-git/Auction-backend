generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId    Int     @id @default(autoincrement())
  username  String  
  email     String  @unique
  password  String  
  items     Item[] 
  bids      Bid[]  
}

model Item {
  itemId        Int      @id @default(autoincrement())
  sellerId      Int
  name          String   
  startingPrice Int  
  imageUrl      String?   
  endTime       DateTime
  highestBidId  Int?      
  createdAt     DateTime  @default(now())

  seller        User      @relation(fields: [sellerId], references: [userId])
  highestBid    Bid?      @relation("HighestBidRelation", fields: [highestBidId], references: [bidId]) // Relation to the highest bid
  bids          Bid[]     @relation("ItemBidsRelation") // Relation to all bids on the item

  @@map("Items")
}

model Bid {
  bidId      Int      @id @default(autoincrement())
  itemId     Int
  bidderId   Int
  bidAmount  Int  
  bidTime    DateTime 

  item       Item     @relation("ItemBidsRelation", fields: [itemId], references: [itemId]) // Relation to the item that the bid is for
  bidder     User     @relation(fields: [bidderId], references: [userId])

  @@map("Bids")
  Item Item[] @relation("HighestBidRelation")
}

